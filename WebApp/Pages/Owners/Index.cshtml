@page
@model Eksam.Pages_Owners.IndexModel

@{
    ViewData["Title"] = "Owners";
}

<h1>Owners</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="CurrentFilter" class="form-control" placeholder="Search by name or email..." value="@Model.CurrentFilter">
        <button type="submit" class="btn btn-primary">Search</button>
        @if (!string.IsNullOrEmpty(Model.CurrentFilter))
        {
            <a asp-page="./Index" class="btn btn-secondary">Clear</a>
        }
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                    @Html.DisplayNameFor(model => model.Owner[0].Name)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.EmailSort">
                    @Html.DisplayNameFor(model => model.Owner[0].Email)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].PremiumLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Owner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PremiumLevel)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
