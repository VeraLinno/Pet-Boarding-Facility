@page
@model Eksam.Pages_Pets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="SearchString" class="form-control" placeholder="Search by name or email..." value="@Model.SearchString">
        <button type="submit" class="btn btn-primary">Search</button>
        @if (!string.IsNullOrEmpty(Model.SearchString))
        {
            <a asp-page="./Index" class="btn btn-secondary">Clear</a>
        }
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Species)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Aggressive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].DietaryRestrictions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aggressive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DietaryRestrictions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner!.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
