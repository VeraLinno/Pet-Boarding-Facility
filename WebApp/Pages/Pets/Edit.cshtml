@page
@model Eksam.Pages_Pets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Pet.Name" class="control-label"></label>
                <input asp-for="Pet.Name" class="form-control" />
                <span asp-validation-for="Pet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Pet.Species" class="control-label"></label>
                <select asp-for="Pet.Species" class="form-control" asp-items="Html.GetEnumSelectList<Domain.Enums.PetSpecies>()">
                    <option value="">-- Select Species --</option>
                </select>
                <span asp-validation-for="Pet.Species" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Pet.Size" class="control-label"></label>
                <select asp-for="Pet.Size" class="form-control" asp-items="Html.GetEnumSelectList<Domain.Enums.PetSize>()">
                    <option value="">-- Select Size --</option>
                </select>
                <span asp-validation-for="Pet.Size" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pet.Aggressive" /> @Html.DisplayNameFor(model => model.Pet.Aggressive)
                </label>
            </div>
            <div class="form-group">
                
                <label asp-for="Pet.DietaryRestrictions" class="control-label"></label>
                <input asp-for="Pet.DietaryRestrictions" class="form-control" />
                <span asp-validation-for="Pet.DietaryRestrictions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Pet.OwnerId" class="control-label"></label>
                <select asp-for="Pet.OwnerId" class="form-control" asp-items="ViewBag.OwnerId"></select>
                <span asp-validation-for="Pet.OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Notes" class="control-label"></label>
                <input asp-for="Pet.Notes" class="form-control" />
                <span asp-validation-for="Pet.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.KennelId" class="control-label"></label>
                <select asp-for="Pet.KennelId" class="form-control" asp-items="ViewBag.KennelId">
                    <option value="">-- No Kennel --</option>
                </select>
                <span asp-validation-for="Pet.KennelId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Pet.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
