@page
@model Eksam.Pages_Medications.DeleteModel

@{
    ViewData["Title"] = "Delete Medication";
}

<div class="container">
    <h1 class="mb-4">Delete Medication</h1>

    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this medication?
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Medication Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Pet</dt>
                <dd class="col-sm-9">@Model.Medication?.Pet?.Name</dd>

                <dt class="col-sm-3">Medication Name</dt>
                <dd class="col-sm-9">@Model.Medication?.Name</dd>

                <dt class="col-sm-3">Time</dt>
                <dd class="col-sm-9">@Model.Medication?.Time.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-3">Special Conditions</dt>
                <dd class="col-sm-9">@Model.Medication?.SpecialCondition</dd>

                <dt class="col-sm-3">Required</dt>
                <dd class="col-sm-9">
                    @if (Model.Medication?.Required == true)
                    {
                        <span class="badge bg-danger">Required</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Optional</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form method="post">
            <input type="hidden" asp-for="Medication.Id" />
            <input type="hidden" asp-for="Medication.PetId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
